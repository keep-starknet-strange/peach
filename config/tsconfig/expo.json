{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Expo",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "composite": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "module": "CommonJS",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "types": [
      "react-native",
      "jest",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "paths": {
    "ui/*": [
      "packages/ui/*"
    ],
    "peach/*": [
      "packages/peach/*"
    ],
    "utilities/*": [
      "packages/utilities/*"
    ]
  }
}
